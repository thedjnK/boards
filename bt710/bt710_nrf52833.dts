&adc {
	status = "okay";
};

&gpiote {
	status = "okay";
};

&gpio0 {
	status = "okay";

	/* What a random bunch of GPIOs, 10/10 for a great board file from the vendor where half of
	 * these pins are just completely undefined and not mentioned. No clue as what they do but
	 * they prevent the sensor from using 2.5mA continuously
	 */
	highport0 {
		gpio-hog;
		gpios = <31 GPIO_ACTIVE_HIGH>;
		output-high;
	};

	lowport0 {
		gpio-hog;
		gpios = <13 GPIO_ACTIVE_HIGH>,
			<14 GPIO_ACTIVE_HIGH>,
			<15 GPIO_ACTIVE_HIGH>,
			<16 GPIO_ACTIVE_HIGH>,
			<20 GPIO_ACTIVE_HIGH>,
			<21 GPIO_ACTIVE_HIGH>,
			<24 GPIO_ACTIVE_HIGH>,
			<25 GPIO_ACTIVE_HIGH>,
			<9 GPIO_ACTIVE_HIGH>,
			<28 GPIO_ACTIVE_HIGH>;
		output-low;
	};
};

&gpio1 {
	status = "okay";

	highport1 {
		gpio-hog;
		gpios = <7 GPIO_ACTIVE_HIGH>;
		output-high;
	};

	lowport1 {
		gpio-hog;
		gpios = <6 GPIO_ACTIVE_HIGH>,
			<8 GPIO_ACTIVE_HIGH>;
		output-low;
	};

};

&reg0 {
	status = "okay";
};

&reg1 {
	regulator-initial-mode = <NRF5X_REG_MODE_DCDC>;
};

&uicr {
	gpio-as-nreset;
};

&uart0 {
	compatible = "nordic,nrf-uarte";
	current-speed = <115200>;
	status = "disabled";
	pinctrl-0 = <&uart0_default>;
	pinctrl-1 = <&uart0_sleep>;
	pinctrl-names = "default", "sleep";
};

&i2c0 {
	compatible = "nordic,nrf-twim";
	status = "okay";
	pinctrl-0 = <&i2c0_default>;
	pinctrl-1 = <&i2c0_sleep>;
	pinctrl-names = "default", "sleep";

	lis2dh12@18 {
		compatible = "st,lis2dh12", "st,lis2dh";
		reg = <0x18>;
		irq-gpios = <&gpio1 5 GPIO_ACTIVE_HIGH>,
			    <&gpio1 12 GPIO_ACTIVE_HIGH>;
		disconnect-sdo-sa0-pull-up;
	};
};

&spi1 {
	compatible = "nordic,nrf-spim";
	status = "okay";
	pinctrl-0 = <&spi1_default>;
	pinctrl-1 = <&spi1_sleep>;
	pinctrl-names = "default", "sleep";
	cs-gpios = <&gpio0 11 0>;

	mx25r4035fzuil0@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <8000000>;
		size = <0x400000>;
		has-dpd;
		t-enter-dpd = <10000>;
		t-exit-dpd = <35000>;
		dpd-wakeup-sequence = <30000 20 35000>;
		mxicy,mx25r-power-mode = "low-power";
		jedec-id = [c2 28 13];
	};
};

&flash0 {
	/*
	 * For more information, see:
	 * http://docs.zephyrproject.org/latest/guides/dts/index.html#flash-partitions
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/* 48KiB */
		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x000000000 0xC000>;
		};

		/* 304KiB */
		slot0_partition: partition@c000 {
			label = "image-0";
			reg = <0x0000C000 0x4c000>;
		};

		/* 136KiB */
		slot1_partition: partition@58000 {
			label = "image-1";
			reg = <0x00058000 0x22000>;
		};

		/* 24KiB */
		storage_partition: partition@7a000 {
			label = "storage";
			reg = <0x0007A000 0x00006000>;
		};
	};
};
